@model List<HelloMVCWorld.Models.Student>

@*
    This block is used to set the layout of the view to null,
    indicating that no shared layout should be applied to this
    particular view. It means that this view will have its own
    independent HTML structure without any shared layout.
*@
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <h1 class="text-center mt-4">Student List</h1>
    <a class="btn btn-primary mb-3" asp-area="" asp-controller="Student" asp-action="Index">Add Student</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Address</th>
                <th>City</th>
                <th>PostCode</th>
                <th>Date of Birth</th>
                <th>Occupation</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Id</td>
                    <td>@student.Name</td>
                    <td>@student.Phone</td>
                    <td>@student.Email</td>
                    <td>@student.Address</td>
                    <td>@student.City</td>
                    <td>@student.PostCode</td>
                    <td>@student.DoB</td>
                    <td>@student.Occupation</td>
                </tr>
            }
        </tbody>
    </table>
</div>

